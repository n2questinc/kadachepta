<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_audio_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.n2quest.kadachepta.PlayerActivity"
    android:background="#000000">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/coverImage"
        android:scaleType="centerCrop"
        android:src="@drawable/defim"
        android:layout_above="@+id/linearLayout2"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#000000"
        android:alpha="0.9"
        android:id="@+id/linearLayout2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:baselineAligned="false"
            android:orientation="vertical">

            <TextView
                android:id="@+id/now_playing_text"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:text="@string/now_playing"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:textStyle="normal"
                android:textAlignment="center"
                android:layout_weight="0.41"
                android:layout_marginTop="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right|top"
                android:layout_weight="1.5"
                android:gravity="center_horizontal">

                <ImageView
                    android:layout_width="110dp"
                    android:layout_height="40dp"
                    android:id="@+id/imageLike"
                    android:src="@drawable/like"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="0dp" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/playerFoewBtn"
                    android:src="@drawable/rewind"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:onClick="forward" />

                <ImageButton
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:id="@+id/playspause"
                    android:src="@drawable/playys"

                    android:background="#00ffffff"
                    android:onClick="play"
                    android:cropToPadding="false"
                    android:scaleType="centerInside"
                    android:layout_gravity="center_horizontal" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/playerNextBtn"
                    android:onClick="nextTrack"
                    android:src="@drawable/fast_forward"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp" />

                <ImageView
                    android:layout_width="110dp"
                    android:layout_height="40dp"
                    android:id="@+id/imageView8"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/apps"
                    android:layout_marginLeft="10dp"
                    android:onClick="menuClick" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/controls_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:onClick="downloadMix"
        android:layout_gravity="center_vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/currentTime"
            android:text="00:00:00"
            android:textColor="#FFFFFF"
            android:padding="5dp"/>

        <SeekBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/seekBar"
            android:layout_centerHorizontal="true"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/totalTime"
            android:text="00:00:00"
            android:textColor="#FFFFFF"
            android:padding="5dp"/>

    </LinearLayout>


</RelativeLayout>
