<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_audio_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.n2quest.kadachepta.OfflinePlayerActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#000000"
        android:alpha="0.9"
        android:id="@+id/linearLayout2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:baselineAligned="false"
            android:orientation="vertical">

            <TextView
                android:id="@+id/now_playing_text"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:text="@string/now_playing"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:textStyle="normal"
                android:textAlignment="center"
                android:layout_weight="0.41"
                android:layout_marginTop="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1.58"
                android:baselineAligned="false"
                android:gravity="center_horizontal">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/imageView10"
                    android:src="@drawable/rewind"
                    android:onClick="forwardOff"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="15dp" />

                <ImageButton
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:id="@+id/playPauseButtClick"
                    android:onClick="playOff"
                    android:background="#00ffffff"
                    android:src="@drawable/playys"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/imageView11"
                    android:onClick="nextTrackOff"
                    android:src="@drawable/fast_forward"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/coverImage"
        android:layout_centerHorizontal="true"
        android:scaleType="center"
        android:src="@drawable/defim_black"
        android:layout_above="@+id/linearLayout2" />


    <LinearLayout
        android:id="@+id/controls_bar"
        android:layout_width="393dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:onClick="downloadMix"
        android:layout_gravity="center_vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/currentTime"
            android:text="00:00:00"
            android:textColor="#FFFFFF"
            android:padding="5dp"/>

        <SeekBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/seekBar"
            android:layout_centerHorizontal="true"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/totalTime"
            android:text="00:00:00"
            android:textColor="#FFFFFF"
            android:padding="5dp"/>

    </LinearLayout>


</RelativeLayout>
