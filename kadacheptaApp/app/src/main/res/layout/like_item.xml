<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:background="#151515">
    <LinearLayout
        android:id="@+id/newsdthumbnail"
        android:padding="3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="5dp"


        >
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/defim"
            android:id="@+id/likeCoverTrack"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/trendstationNameLayout"
        android:padding="3dp"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/newsdthumbnail"
        android:layout_toEndOf="@+id/newsdthumbnail">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"

                android:id="@+id/likeTrackName"
                android:textSize="15dp"
                android:textColor="#ffffff"
                android:ellipsize="end"
                android:singleLine="false"


                android:layout_weight="10"
                android:gravity="center_vertical|left"
                android:textStyle="normal" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Large Text"
                android:id="@+id/likeArtistName"
                android:layout_below="@+id/trendstationNameLayout"
                android:layout_alignLeft="@+id/trendstationNameLayout"
                android:layout_alignStart="@+id/trendstationNameLayout"
                android:layout_weight="10"
                android:textColor="@color/colorGreen"
                android:textSize="15dp" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>